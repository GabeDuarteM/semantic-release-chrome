{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "lib": ["esnext"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./node_modules/**/*",
    "./dist/**/*",
    "./src/**/*.test.ts",
    "./src/**/*.test.js"
  ]
}
