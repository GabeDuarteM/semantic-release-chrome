{
  "name": "semantic-release-chrome",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "author": "Gabriel Duarte <gabrielqduarte@gmail.com> (https://www.gabrielduarte.tech/)",
  "license": "MIT",
  "description": "Set of semantic-release plugins for publishing a Chrome extension release",
  "homepage": "https://github.com/GabrielDuarteM/semantic-release-chrome",
  "repository": {
    "type": "git",
    "url": "https://github.com/GabrielDuarteM/semantic-release-chrome.git"
  },
  "bugs": {
    "url": "https://github.com/GabrielDuarteM/semantic-release-chrome/issues"
  },
  "engines": {
    "node": ">=8.3"
  },
  "keywords": [
    "semantic-release",
    "plugin",
    "chrome",
    "webstore",
    "extension",
    "publish",
    "version"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "yarn build -w",
    "prebuild": "rimraf dist",
    "build": "babel src --extensions \".ts\" --out-dir dist",
    "postbuild": "rimraf dist/@types",
    "type-check": "tsc",
    "lint": "tslint -p tsconfig.json",
    "ci": "yarn type-check && yarn lint && yarn build",
    "release": "semantic-release"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.44",
    "@babel/core": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@babel/preset-typescript": "^7.0.0-beta.44",
    "@types/adm-zip": "^0.4.31",
    "@types/archiver": "^2.1.1",
    "@types/fs-extra": "^5.0.2",
    "@types/node": "^9.6.6",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.1.7",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "@semantic-release/error": "^2.2.0",
    "@types/aggregate-error": "^1.0.0",
    "aggregate-error": "^1.0.0",
    "archiver": "^2.1.1",
    "chrome-webstore-upload": "^0.2.2",
    "fs-extra": "^5.0.0"
  }
}
